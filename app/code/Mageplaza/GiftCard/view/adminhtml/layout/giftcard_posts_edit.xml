<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="left">
            <block class="Mageplaza\GiftCard\Block\Adminhtml\Posts\Edit\Tabs"
                   name="helloworld_posts_grid_block.edit.tabs">
                <block class="Mageplaza\GiftCard\Block\Adminhtml\Posts\Edit\Tab\Info"
                       name="mageplaza_giftcard_code_edit_tab_info"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">code</argument>
                    <argument name="block" xsi:type="string">mageplaza_giftcard_code_edit_tab_info</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Mageplaza\GiftCard\Block\Adminhtml\Posts\Edit"
                   name="helloworld_posts_grid_block.edit"/>
        </referenceContainer>
    </body>
</page>
